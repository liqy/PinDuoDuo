<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/colorWhite"
   >
    <ImageView
        android:id="@+id/new_fragment_recycler_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />
    <TextView
        android:id="@+id/new_fragment_recycler_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   【回顾老顾客限时29.9元，活动结束立马涨价59.9元】新韩版女装潮韩版宽松短"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/new_fragment_recycler_image"/>
    <TextView
        android:id="@+id/new_fragment_recycler_pricce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:text="￥29.9"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/new_fragment_recycler_content"/>
    <TextView
        android:id="@+id/recycler_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_fragment_recycler_pricce"/>
</RelativeLayout>
