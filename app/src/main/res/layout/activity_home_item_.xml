<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="bw.pdd.activit.Home_item_Activity">

    <RelativeLayout
        android:id="@+id/tops"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ff6">

        <ImageView
            android:id="@+id/home_nav_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_arrow" />

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="9块9特卖" />

        <ImageView
            android:id="@+id/home_nav_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/nav_share" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/tops"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/home_item_tab"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:tabMode="scrollable"
            app:tabTextColor="#0a0909"
            app:tabSelectedTextColor="#e02e24"
            app:tabIndicatorColor="#e02e24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/home_item_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
