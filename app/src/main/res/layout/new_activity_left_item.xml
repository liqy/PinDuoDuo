<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/new_activity_left_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        >
        <LinearLayout
            android:id="@+id/new_activity_left_item_relative"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/new_activity_left_item_tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/newletffragmenttv"
                android:layout_weight="0.7"
                android:text="￥99"
                android:textSize="20sp"
                android:textColor="@color/colorRed"
                android:gravity="center"/>
            <TextView
                android:id="@+id/new_activity_left_item_tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorRed"
                android:textColor="@color/white"
                android:text="去拼单"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/new_activity_left_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_newitemwenhui"
            android:text="已拼6.9万件，市场价￥699"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_alignLeft="@id/new_activity_left_item_relative"
            android:layout_above="@id/new_activity_left_item_relative"
            />
        <TextView
            android:id="@+id/new_activity_left_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/new_activity_left_item_relative"
            android:text="【回顾老顾客限时29.9元，活动结束立马涨价59.9元】新韩版女装潮韩版宽松短"
            android:textColor="@color/colorBlack"
            />
    </RelativeLayout>

</LinearLayout>