<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/ly"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorRed"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/denglutouxiang"
                    android:id="@+id/pc_login"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:id="@+id/pc_name"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="未登录"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:text="我的订单"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="查看全部》"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pc_waiting_for_pay"
                        android:drawableTop="@drawable/daifukuan"
                        android:layout_weight="1"
                        android:text="待付款"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_waiting_for_spell_list"
                        android:drawableTop="@drawable/daipindan2"
                        android:layout_weight="1"
                        android:text="待拼单"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_waiting_delivery"
                        android:drawableTop="@drawable/daifahuo"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="待发货"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_waiting_for_goods"
                        android:drawableTop="@drawable/daishouhuo"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="待收货"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_waiting_for_evaluation"
                        android:drawableTop="@drawable/daipingjia2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="待评价"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f2f2f2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pc_message"
                        android:drawableTop="@drawable/xiaoxi"
                        android:layout_weight="1"
                        android:text="我的消息"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_preferential"
                        android:drawableTop="@drawable/wodeyouhuiquan"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我的优惠券"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_collect"
                        android:drawableTop="@drawable/wodeshoucang"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我的收藏"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/pc_refunds"
                        android:drawableTop="@drawable/tuikuanshouhou"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="退款售后"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f2f2f2"/>
                <!--//足迹-->
                <TextView
                    android:id="@+id/pc_share"
                    android:text="  邀请好友下载App赚红包"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/hongbao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"/>
                <TextView
                    android:id="@+id/pc_histore"
                    android:text="  我的足迹"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/wodezuji"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"/>
                <!--//抽奖-->
                <TextView
                    android:id="@+id/pc_lucky_draw"
                    android:text="  我的抽奖"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ccc"/>
                <!--//拼单-->
                <TextView
                    android:id="@+id/pc_spell_list"
                    android:text="  我的拼单"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ccc"/>
                <!--//免单券-->
                <TextView
                    android:id="@+id/pc_free_of_charge"
                    android:text="  我的免单券"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ccc"/>
                <!--//收获地址-->
                <TextView
                    android:id="@+id/pc_address"
                    android:text="  收货地址"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ccc"/>
                <!--//设置-->
                <TextView
                    android:id="@+id/pc_setting"
                    android:text="  设置"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ccc"/>
            </LinearLayout>
        </LinearLayout>
</ScrollView>