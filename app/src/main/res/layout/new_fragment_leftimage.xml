<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="@color/colorgray">
    <RelativeLayout
        android:id="@+id/new_left_imgright"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/new_left_neighbor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邻里团"
        android:drawableLeft="@drawable/new_list_rank"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_newitemheihui"
        />
        <TextView
            android:id="@+id/new_left_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身边的人都在拼"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_newitemwenhui"
            android:layout_below="@id/new_left_neighbor"
            />
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@id/new_left_content"
            android:gravity="center"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/new_left_tu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
               android:src="@drawable/newleftimage"
                android:background="@mipmap/ic_launcher"
                />
            <ImageView
                android:id="@+id/new_left_tu1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/newleftimage"
                android:background="@mipmap/ic_launcher"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/newleftimage"
                android:background="@drawable/ic_first_see_all"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>